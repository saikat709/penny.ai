{
  "manifest_version": 2,
  "name": "Penny.ai Transaction Logger",
  "version": "1.0",
  "description": "Logs transactions when a user closes a tab.",
  "permissions": [
    "tabs",
    "webNavigation",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}